# Cloudflare Workers API (필수)
# Supabase에서 Cloudflare Workers로 마이그레이션 완료 (v2.40.0+)
VITE_WORKERS_API_URL=https://api.ideaonaction.ai

# Sentry Configuration (에러 추적)
# Sentry 프로젝트: https://sentry.io/
VITE_SENTRY_DSN=your_sentry_dsn_here

# Google Analytics 4 (웹 분석)
# GA4 설정: https://analytics.google.com/
VITE_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# OpenAI Configuration (AI 챗봇)
# OpenAI API 키: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=sk-your_openai_api_key_here
# 사용할 모델 (gpt-3.5-turbo 또는 gpt-4-turbo-preview)
VITE_OPENAI_MODEL=gpt-3.5-turbo

# Resend Configuration (이메일 알림)
# Resend API 키: https://resend.com/api-keys
VITE_RESEND_API_KEY=re_your_resend_api_key_here
# 발신자 이메일 주소 (Resend에서 도메인 인증 필요)
VITE_FROM_EMAIL=noreply@ideaonaction.ai

# Application Version
VITE_APP_VERSION=1.7.2

# PWA Configuration
# PWA는 빌드 시 자동으로 생성됩니다.
# manifest.webmanifest, sw.js (Service Worker)

# Minu OAuth Configuration
# Minu 서비스 연동을 위한 OAuth 2.0 설정
# 환경: local (개발), dev (개발 서버), staging (스테이징)
VITE_MINU_ENV=local

# Minu Find 서비스
VITE_MINU_FIND_CLIENT_ID=minu-find-local
VITE_MINU_FIND_REDIRECT_URI=http://localhost:3001/auth/callback

# Minu Frame 서비스
VITE_MINU_FRAME_CLIENT_ID=minu-frame-local
VITE_MINU_FRAME_REDIRECT_URI=http://localhost:3002/auth/callback

# Minu Build 서비스
VITE_MINU_BUILD_CLIENT_ID=minu-build-local
VITE_MINU_BUILD_REDIRECT_URI=http://localhost:3003/auth/callback

# Minu Keep 서비스
VITE_MINU_KEEP_CLIENT_ID=minu-keep-local
VITE_MINU_KEEP_REDIRECT_URI=http://localhost:3004/auth/callback

# OAuth 엔드포인트 (IDEA on Action 인증 서버)
VITE_OAUTH_AUTHORIZE_URL=https://www.ideaonaction.ai/oauth/authorize
VITE_OAUTH_TOKEN_URL=https://www.ideaonaction.ai/oauth/token
VITE_OAUTH_USERINFO_URL=https://www.ideaonaction.ai/oauth/userinfo

# MCP Auth Configuration (Minu 서비스 연동 - Supabase Secrets)
# Minu Find 서비스 인증 시크릿 (HMAC-SHA256 서명용)
# 생성: openssl rand -hex 32
WEBHOOK_SECRET_MINU_FIND=your_webhook_secret_here

# MCP JWT 서명 시크릿 (Access Token 발급용)
# 생성: openssl rand -hex 32
MCP_JWT_SECRET=your_jwt_secret_here

# Toss Payments Configuration (결제 연동)
# 발급: https://developers.tosspayments.com/
# -----------------------------------------------------------------------------
# 일반결제용 (단건결제)
VITE_TOSS_CLIENT_KEY=live_ck_your_client_key_here
VITE_TOSS_SECRET_KEY=live_sk_your_secret_key_here
VITE_TOSS_SECURITY_KEY=your_security_key_here

# 정기결제용 (구독)
VITE_TOSS_BILLING_CLIENT_KEY=live_ck_your_billing_client_key_here
VITE_TOSS_BILLING_SECRET_KEY=live_sk_your_billing_secret_key_here
VITE_TOSS_BILLING_SECURITY_KEY=your_billing_security_key_here

# 결제위젯용 (선택)
VITE_TOSS_WIDGET_CLIENT_KEY=live_ck_your_widget_client_key_here
VITE_TOSS_WIDGET_SECRET_KEY=live_sk_your_widget_secret_key_here
